<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="jform">
		<fieldset name="fields">
			<field name="groupbyfields"
				   type="repeatable"
				   icon="list">
				<fieldset hidden="true" repeat="true">
					<field name="name"
						   label="COM_CSVI_TEMPLATE_GROUPBY_FIELDNAME_LABEL"
						   size="1"
						   class="advancedSelect"
						   type="csviavailablefields"
						   idfield="csvi_template_id"/>
				</fieldset>
			</field>
			<field name="sortfields"
				   type="repeatable"
				   icon="list">
				<fieldset hidden="true" repeat="true">
					<field name="name"
						   label="COM_CSVI_TEMPLATE_SORT_FIELDNAME_LABEL"
						   size="1"
						   class="advancedSelect"
						   type="csviavailablefields"
						   idfield="csvi_template_id"/>
					<field name="sortby"
					       type="list"
						   label="COM_CSVI_TEMPLATE_SORT_ORDER_LABEL"
					       class="input-large advancedSelect"
					       default="asc">
						<option value="ASC">COM_CSVI_SELECT_ORDER_ASC</option>
						<option value="DESC">COM_CSVI_SELECT_ORDER_DESC</option>
					</field>
				</fieldset>
			</field>
		</fieldset>
	</fields>
</form>
